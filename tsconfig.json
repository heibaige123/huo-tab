{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["packages/common/*"],
      "^components/*": ["packages/common/components/*"],
      "^images/*": ["packages/common/images/*"],
      "^lib/*": ["packages/common/lib/*"],
      "^shadcn/*": ["packages/common/shadcn/*"],
      "^style/*": ["packages/common/style/*"],
      "@newtab/*": ["packages/newtab/src/*"],
      "@popup/*": ["packages/popup/src/*"],
      "@store/*": ["packages/store/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.module\\.css$",
          "useConfig": true
        }
      }
    ]
  },
  "include": ["packages/**/*", "node_modules/styled-jsx/index.d.ts"]
}
